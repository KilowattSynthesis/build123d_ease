{
    "[json]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "prettier.tabWidth": 4
    },
    "[jsonc]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "prettier.tabWidth": 4
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.rulers": [88]
    },
    "python.testing.pytestArgs": ["tests"],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,

    "files.exclude": {
        "**/.pytest_cache": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/*.egg-info": true
    }
}
